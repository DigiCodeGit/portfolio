@model IEnumerable<Artwork>  // The model that is list of Artwork will be passed from controller to this view

@{
    ViewData["Title"] = "eCommerce";
}

<!-- TODO: Use bootsrap cards to display -->
<div class="container">

    <!-- Loop through and display each item -->
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-auto">
                <div class="row">
                    <div class="col">
                        <img class="img-fluid" src="@item.Url" width="200" />
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        @item.Title
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        $@item.Price
                        <br /><br />
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <label for="qty">Qty</label>
                        <select id='@String.Concat("qty", @item.Key)'>
                            @for (int i = 1; i <= 10; ++i)
                            {
                                <option value="@i">@i</option>
                            }
                        </select>
                        <input type="button" value="Add" name="addCartBtn" id ='@String.Concat("cartItem", @item.Key)' style="width:150px" data-toggle="modal" data-target="#cartSummary" />
                    </div>
                </div>
                <br /><br />
            </div>
        }
    </div>

</div>

<div id="cartSummary" class="modal fade" role="dialog" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title" align="center">
                    Shopping Cart Notice
                </h5>
                <button type="button" class="close" data-dismiss="modal" onclick="$('#cartSummary').modal('hide');">
                    <span>&times;</span>
                </button>
            </div>

            <div class="modal-body">
                This works
            </div>

        </div>

    </div>
</div>

@section Scripts {

    <script>

        // wait for document ready
        $(document).ready(function () {

            // Adds item to cart
            $("input[name='addCartBtn'").on('click', function () {

                // Get art id (id is in suffix)
                var artId = this.id.replace("cartItem", "");

                // Get Quantity
                var artQty = $('#qty' + artId).val();

                // Build model data
                var data = { ObjArtwork: {Key: artId, URL: "", Title: "", Price: 0}, Qty: artQty };

                // Build JSON data string to pass to server
                $.ajax({
                    type: "POST",
                    url: "/ECommerce/AddToCart",
                    contentType: "application/json; charset=utf-8",
                    data: JSON.stringify(data),
                    success: function (response) {
                        alert(response);
                    },
                    error: function () {
                        alert("error");
                    }
                });

                // Get art price and calculate total based on quantity

                // Show cart info
                $('#cartSummary').modal('show');

            });
        });

    </script>
}
