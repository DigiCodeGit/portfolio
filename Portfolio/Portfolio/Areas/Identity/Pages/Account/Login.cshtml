@page
@model LoginModel

@{
    ViewData["Title"] = "Portal";
    Layout = "~/Areas/Identity/Pages/_LoginLayout.cshtml";
}

<!--Formatting done by layout file above-->
<h1 class="border-5">@ViewData["Title"]</h1>
<hr />
<form id="account" method="post">
    <div class="form-group">
    <!-- Error Messages-->
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!-- Inputs -->
    <div class="form-floating"> <!-- Make label text show inside input field-->
        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true"/>
        <label asp-for="Input.Email" class="form-label"></label>
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>

    <div class="form-floating">
        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
        <label asp-for="Input.Password" class="form-label"></label>
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>

    <!-- Options -->
    <div>
        <div class="checkbox">
            <label asp-for="Input.RememberMe" class="form-label">
                <input class="form-check-input" asp-for="Input.RememberMe" />
                @Html.DisplayNameFor(m => m.Input.RememberMe)
            </label>
        </div>
    </div>

    <!-- Submit -->
    <div>
        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
    </div>

    <!-- Additional features -->
    <div>
        <p>
            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
        </p>
        <p>
            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register</a>
        </p>
    </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
