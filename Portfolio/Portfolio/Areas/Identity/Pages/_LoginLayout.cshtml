@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-center align-items-center vh-100">
        <div class="card login-logout-card border-primary" style="width: 500px">
            <div class="card-header">
                <ul class="nav nav-tabs card-header-tabs">
                    <li class="nav-item">
                        <a class="nav-link" id="guestTab" href="/Identity/Account/Login?guestId=guestTab">Guest</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link" id="memberTab" href="/Identity/Account/Login?guestId=memberTab">Member</a>
                    </li>
                </ul>
            </div>
            <div class="card-body">
                <div class="row justify-content-center">
                    <div class="my-4" align="center">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
</div>

@section Scripts{

    @await RenderSectionAsync("Scripts", required: false)

    <script>

