                // Vars
                const thisAnchor = $(this);
                var curIdVal = $('#guestId').val().toLowerCase();
                var ancId = thisAnchor.attr('id').toLowerCase();

                // Current tab id matches tab id that was clicked
                if (curIdVal == ancId) {
                    
                    // Highlight tab by setting to active
                    thisAnchor.addClass('active');
                }
